---
const { url = "#", color, icon } = Astro.props;
---

<a href={url} class="social group">
  <i class:list={["iconfont text-2xl group-hover:text-white", icon]}></i>
</a>

<style define:vars={{ color }}>
  i {
    color: var(--color);
  }
  .social {
    @apply w-8 h-8 flex justify-center items-center relative overflow-hidden transition-all ease-in-out hover:scale-125;
    border-radius: 35%;
  }
  .social::before {
    content: "";
    position: absolute;
    top: 90%;
    left: -110%;
    width: 120%;
    height: 120%;
    background: var(--color);
    transform: rotate(45deg);
    transition: all 0.2s;
    z-index: -1;
    transition: all 0.35s cubic-bezier(0.31, -0.105, 0.43, 1.59);
  }
  .social:hover::before {
    top: -3px;
    left: -3px;
  }
</style>
