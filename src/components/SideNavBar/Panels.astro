---
import { Author, Motto, Avatar } from "@/consts";
import TotalArticle from "./TotalArticle.astro";
import SideIcon from "./SideIcon.astro";
import MainButton from "./MainButton.astro";
import { linkList } from "@/consts";
---

<div class="w-full pt-5 space-y-5">
  <div class="text-center space-y-2">
    <img
      src={Avatar}
      class="rounded-full w-40 h-40 m-auto"
      alt=""
    />
    <p>{Author}</p>
    <p class="text-secondary">{Motto}</p>
  </div>
  <div class="flex justify-center divide-x text-jump">
    <TotalArticle num={999}>文章</TotalArticle>
    <TotalArticle num={999}>分类</TotalArticle>
    <TotalArticle num={999}>标签</TotalArticle>
  </div>
  <div class="flex justify-between">
    <SideIcon color="#000" icon={"icon-github-fill"} />
    <SideIcon color="#c71d23" icon={"icon-gitee"} />
    <SideIcon color="#00a5dc" icon={"icon-bilibili-fill"} />
    <SideIcon color="#006cff" icon={"icon-juejin"} />
    <SideIcon color="#1e88e5" icon={"icon-zhihu"} />
  </div>
  <div class="space-y-3 px-4">
    {
      linkList.map((item) => (
        <MainButton href={item.path} icon={item.icon}>
          {item.name}
        </MainButton>
      ))
    }
  </div>
</div>
