---
import Link from "@/components/Link.astro";
import { SITE_TITLE, linkList } from "@/consts.js";
import BreadSlices from "./BreadSlices.astro";

const { pathname } = Astro.url;
console.log(pathname);
---

<nav class="fixed left-0 top-0 h-[50px] w-full">
  <div
    class="flex h-full w-full items-center justify-between min-lg:container max-lg:px-5"
  >
    <!-- 面包片 -->
    <BreadSlices />
    <!-- 导航栏 -->
    <div class="space-x-4 max-md:hidden">
      <span>{SITE_TITLE}</span>
      {
        linkList.map((item) => (
          <Link
            class={`navLink before:navLinkBefore${
              item.path === pathname ? " active" : ""
            }`}
            href={item.path}
            icon={item.icon}
          >
            {item.name}
          </Link>
        ))
      }
    </div>
    <!-- 功能栏 -->
    <div class="space-x-4">
      <i class="iconfont icon-richu"></i>
      <i class="iconfont icon-sousuo"></i>
    </div>
  </div>
</nav>
<style>
  .navLink {
    @apply relative hover:before:w-full;
  }
</style>
